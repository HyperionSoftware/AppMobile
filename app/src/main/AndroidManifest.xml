<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.TheGame"
        tools:targetApi="31">

        <activity
            android:name="cat.udl.hyperion.appmobils.thegame.TermsAndConditions"
            android:exported="false" />
        <activity
            android:name="cat.udl.hyperion.appmobils.thegame.SplashActivity"
            android:exported="false" />
        <activity
            android:name="cat.udl.hyperion.appmobils.thegame.AboutPage"
            android:exported="false" />
        <activity
            android:name="cat.udl.hyperion.appmobils.thegame.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>